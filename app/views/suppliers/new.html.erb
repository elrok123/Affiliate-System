<% if current_user %>
	<div id="dashboard">
		<div id="logo"></div>
		<table id="go_back_link_container">
			<tr>
				<td>
					<div class="go_back_link">
						<%= link_to "<- Go Back", "/suppliers/view" %>
					</div>
				</td>
				<td>
					<div id="user_display">
						Logged in as <%= current_user.email %>.
						<%= link_to "Log out", log_out_path %>
					</div>
				</td>
			</tr>
		</table>
		<%= form_for @supplier do |f| %>
		  <% if @supplier.errors.any? %>
		    <div class="error_messages">
		        <% for message in @supplier.errors.full_messages %>
		        	* <%= message %> <br>
		        <% end %>
		    </div>
		  <% end %>
		  <p>
		    <%= f.label 'Supplier Name' %><br />
		    <%= f.text_field :supplier_name, :value => "Enter the supplier's name here...", :onfocus => "clearValue(this)", :onblur => "restoreValue(this)" %>
		  </p>
		  <p>
		    <%= f.label 'Supplier Email' %><br />
		    <%= f.text_field :supplier_email, :value => "Enter the supplier's email here...", :onfocus => "clearValue(this)", :onblur => "restoreValue(this)" %>
		  </p>
		  <p>
		    <%= f.label 'Supplier Phone Number' %><br />
		    <%= f.text_field :supplier_phone_number, :value => "Enter the supplier's phone number here...", :onfocus => "clearValue(this)", :onblur => "restoreValue(this)" %>
		  </p>
		  <p>
		    <%= f.label 'Supplier Address' %><br />
		    <%= f.text_field :supplier_address, :value => "Enter the supplier's address here...", :onfocus => "clearValue(this)", :onblur => "restoreValue(this)" %>
		  </p>
		  <p>
		    <%= f.label 'Supplier Postcode' %><br />
		    <%= f.text_field :supplier_postcode, :value => "Enter the supplier's postcode here...", :onfocus => "clearValue(this)", :onblur => "restoreValue(this)" %>
		  </p>
		  <p class="button"><%= f.submit %></p>
		<% end %>
		<% flash.each do |name, msg| %>
			<%= content_tag :div, "* " + msg, :id => "flash_#{name}" %><br />
		<% end %>
		<div id="copyright-notice"><div id="copyright_border">Copyright Â© Conner McCabe, all rights reserved.</div></div>
	</div>
<% else %>
	<script type="text/javascript">
		window.location="<%= root_url %>"
	</script>
<% end %>