<% if current_user %>
	<div id="dashboard">
		<div id="logo"></div>
		<table id="go_back_link_container">
			<tr>
				<td>
					<div class="go_back_link">
						<%= link_to "<- Go Back", "/clients/view" %>
					</div>
				</td>
				<td>
					<div id="user_display">
						Logged in as <%= current_user.email %>.
						<%= link_to "Log out", log_out_path %>
					</div>
				</td>
			</tr>
		</table>
		<%= form_for @client do |f| %>
		  <% if @client.errors.any? %>
		    <div class="error_messages">
		        <% for message in @client.errors.full_messages %>
		        	* <%= message %> <br>
		        <% end %>
		    </div>
		  <% end %>
		  <p>
		    <%= f.label :email %><br />
		    <%= f.text_field :email, :value => @client.email, :onfocus => "clearValue(this)", :onblur => "restoreValue(this)" %>
		  </p>
		  <p>
		    <%= f.label :firstname %><br />
		    <%= f.text_field :firstname, :value => @client.firstname, :onfocus => "clearValue(this)", :onblur => "restoreValue(this)" %>
		  </p>
		  <p>
		    <%= f.label :surname %><br />
		    <%= f.text_field :surname, :value => @client.surname, :onfocus => "clearValue(this)", :onblur => "restoreValue(this)" %>
		  </p>
		  <p>
		    <%= f.label :address %><br />
		    <%= f.text_field :address, :value => @client.address, :onfocus => "clearValue(this)", :onblur => "restoreValue(this)" %>
		  </p>
		  <p>
		    <%= f.label :city %><br />
		    <%= f.text_field :city, :value => @client.city, :onfocus => "clearValue(this)", :onblur => "restoreValue(this)" %>
		  </p> 
		  <p>
		    <%= f.label :postcode %><br />
		    <%= f.text_field :postcode, :value => @client.postcode, :onfocus => "clearValue(this)", :onblur => "restoreValue(this)" %>
		  </p>
		  <p>
		    <%= f.label :phone_number %><br />
		    <%= f.text_field :phone_number, :value => @client.phone_number, :onfocus => "clearValue(this)", :onblur => "restoreValue(this)" %>
		  </p>
		  <p>
		    <%= f.label :company %><br />
		    <%= f.text_field :company, :value => @client.company, :onfocus => "clearValue(this)", :onblur => "restoreValue(this)" %>
		  </p>
		  <p class="button"><%= f.submit %></p>
		<% end %>
		<% flash.each do |name, msg| %>
			<%= content_tag :div, "* " + msg, :id => "flash_#{name}" %><br />
		<% end %>
		<div id="copyright-notice"><div id="copyright_border">Copyright Â© Conner McCabe, all rights reserved.</div></div>
	</div>
<% else %>
	<script type="text/javascript">
		window.location="<%= root_url %>"
	</script>
<% end %>