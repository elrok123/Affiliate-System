<% if current_user %>
	<div id="dashboard">
		<div id="logo"></div>
		<table id="go_back_link_container">
			<tr>
				<td>
					<div class="go_back_link">
						<%= link_to "<- Go Back", root_url %>
					</div>
				</td>
				<td>
					<div id="user_display">
						Logged in as <%= current_user.email %>.
						<%= link_to "Log out", log_out_path %>
					</div>
				</td>
			</tr>
		</table>
		<% flash.each do |name, msg| %>
			<%= content_tag :div, "* " + msg, :id => "flash_#{name}" %><br />
		<% end %>
		<div id="new_product_container">
			<%= link_to "Add new client...", "/clients/new" %>
		</div>
		<div id="products_container" >
			<table style="width: 100%">
				<thead>
					<tr class="row">
						<td class="row_element" style="width: 50px;">
							<p>Client ID:</p>
						</td>
						<td class="row_element" style="width: 134px;">
							<p>Client Name:</p>
						</td>
						<td class="row_element" style="width: 150px;">
							<p>Client Address:</p>
						</td>
						<td class="row_element" style="width: 70px;">
							<p>Client Number:</p>
						</td>
						<td class="row_element" style="width: 200px;">
							<p>Client Company:</p>
						</td>
						<td class="row_element" style="width: 200px;">
							<p>Date Registered: </p>
						</td>
					</tr>
				</thead>
				<% count = 1; @clients.each do |client| %>
					<% count = 1 unless count == 2 %>
					<tr class="row" <% if count == 2 %><%= "id=#{:grey}" %><% end %>>
						<td class="row_element" style="width: 60px;">
							<%= client.id %>
						</td>
						<td class="row_element" style="width: 150px;">
							<%= link_to (client.firstname + " " + client.surname), "/clients/#{client.id}/edit", :alt => "Click to edit product...", :title => "Click to edit product..." %>
						</td>
						<td class="row_element" style="width: 150px;">
							<%= client.address %>
						</td>
						<td class="row_element" style="width: 70px;">
							<%= client.phone_number %>
						</td>
						<td class="row_element" style="width: 200px;">
							<%= client.company %>
						</td>
						<td class="row_element" style="width: 200px;">
							<%= client.created_at %>
						</td>
					</tr>
					<% count = count + 1 %>
				<% end %>
			</table>
		</div>
		
		<div id="copyright-notice"><div id="copyright_border">Copyright Â© Conner McCabe, all rights reserved.</div></div>
	</div>
<% else %>
	<script type="text/javascript">
		window.location="<%= root_url %>"
	</script>
<% end %>